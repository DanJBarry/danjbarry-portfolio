---
import { Image } from "astro:assets";
import icon from "../assets/received_30324269680550126.jpeg";

interface Props {
    title: string;
    description?: string;
}

const {
    title,
    description = "Software Engineer specializing in backend systems and IAM",
} = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="description" content={description} />
        <meta name="viewport" content="width=device-width" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="preconnect" href="https://rsms.me/" />
        <link rel="stylesheet" href="https://rsms.me/inter/inter.css" />
        <title>{title}</title>
    </head>
    <body>
        <nav>
            <a href="/">Dan Barry</a>
            <div class="nav-links">
                <a href="/">About</a>
                <a href="/experience">Experience</a>
                <a href="/contact">Contact</a>
            </div>
        </nav>
        <main>
            <slot />
        </main>
        <footer>
            <p>Â© 2026 Dan Barry</p>
        </footer>
    </body>
</html>

<style is:global>
    :root {
        --text: #333;
        --bg: #fff;
        --accent: #0066cc;
        --gray: #666;
        --border: #ddd;
    }

    @media (prefers-color-scheme: dark) {
        :root {
            --text: #e0e0e0;
            --bg: #1a1a1a;
            --accent: #4d9fff;
            --gray: #aaa;
            --border: #444;
        }
    }

    @supports (font-variation-settings: normal) {
        :root {
            font-family:
                InterVariable,
                -apple-system,
                BlinkMacSystemFont,
                "Segoe UI",
                Roboto,
                "Helvetica Neue",
                Arial,
                sans-serif;
        }
    }

    * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
    }

    html {
        font-family:
            Inter,
            -apple-system,
            BlinkMacSystemFont,
            "Segoe UI",
            Roboto,
            "Helvetica Neue",
            Arial,
            sans-serif;
        font-size: 18px;
        line-height: 1.6;
        color: var(--text);
        background: var(--bg);
    }

    body {
        max-width: 50rem;
        margin: 0 auto;
        padding: 2rem 1.5rem;
    }

    nav {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
        padding-bottom: 1rem;
        border-bottom: 1px solid var(--border);
    }

    nav a {
        color: var(--text);
        text-decoration: none;
        font-weight: 500;
        font-size: 1.2rem;
    }

    .nav-links {
        display: flex;
        gap: 1.5rem;
    }

    nav a:hover {
        color: var(--accent);
    }

    main {
        min-height: calc(100vh - 12rem);
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    h2 {
        font-size: 1.8rem;
        margin: 2.5rem 0 1rem;
        line-height: 1.3;
    }

    h3 {
        font-size: 1.3rem;
        margin: 2rem 0 0.5rem;
    }

    p {
        margin-bottom: 1rem;
    }

    a {
        color: var(--accent);
        text-decoration: none;
    }

    a:hover {
        text-decoration: underline;
    }

    ul,
    ol {
        margin-left: 2rem;
        margin-bottom: 1rem;
    }

    li {
        margin-bottom: 0.5rem;
    }

    img {
        margin-bottom: 1rem;
        line-height: 1.2;
    }

    code {
        background: var(--border);
        padding: 0.2rem 0.4rem;
        border-radius: 3px;
        font-size: 0.9em;
        font-family: "Courier New", monospace;
    }

    pre {
        background: var(--border);
        padding: 1rem;
        border-radius: 5px;
        overflow-x: auto;
        margin-bottom: 1rem;
    }

    pre code {
        background: none;
        padding: 0;
    }

    footer {
        margin-top: 4rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border);
        color: var(--gray);
        font-size: 0.9rem;
    }

    .subtitle {
        color: var(--gray);
        font-size: 1.2rem;
        margin-bottom: 2rem;
    }

    .project-card {
        margin-top: 2rem;
        padding-top: 2rem;
        border-top: 1px solid var(--border);
    }

    .project-card:last-child {
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid var(--border);
    }

    .project-card h3 {
        margin-top: 0;
    }

    .project-meta {
        color: var(--gray);
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
    }

    .skills-list {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        list-style: none;
        margin-left: 0;
    }

    .skills-list li {
        background: var(--border);
        padding: 0.3rem 0.8rem;
        border-radius: 3px;
        font-size: 0.9rem;
        margin-bottom: 0;
    }

    .job {
        margin-bottom: 2.5rem;
    }

    .job-header {
        margin-bottom: 0.5rem;
    }

    .job-title {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .job-company {
        color: var(--accent);
    }

    .job-meta {
        color: var(--gray);
        font-size: 0.9rem;
        margin-bottom: 0.8rem;
    }

    .contact-links {
        display: flex;
        flex-direction: column;
        gap: 0.5rem;
        margin-top: 1.5rem;
    }

    .contact-item {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .contact-icon {
        width: 1.5rem;
        height: 1.5rem;
        color: var(--accent);
        flex-shrink: 0;
    }

    .inline-icon {
        width: 1.2rem;
        height: 1.2rem;
        display: inline-block;
        vertical-align: middle;
        margin-right: 0.3rem;
        color: var(--gray);
    }

    a .inline-icon {
        color: var(--accent);
    }

    .job-company .inline-icon,
    .job-meta .inline-icon {
        width: 1rem;
        height: 1rem;
        margin-right: 0.25rem;
    }

    @media (max-width: 600px) {
        html {
            font-size: 16px;
        }

        body {
            padding: 1.5rem 1rem;
        }

        h1 {
            font-size: 2rem;
        }

        h2 {
            font-size: 1.5rem;
        }

        nav {
            flex-direction: column;
            gap: 1rem;
            align-items: flex-start;
        }
    }

    .tooltip {
        position: relative;
        display: inline-block;
        border-bottom: 1px dotted black;
        cursor: pointer;
    }

    .tooltiptext {
        visibility: hidden;
        width: 130px;
        background-color: black;
        color: #ffffff;
        text-align: center;
        border-radius: 6px;
        padding: 5px 0;
        position: absolute;
        z-index: 1;
        top: 100%;
        left: 65%;
        margin-left: -65px;
    }

    .tooltip:hover .tooltiptext {
        visibility: visible;
    }
</style>
